<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateContentActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/medium"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="@string/content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/createSetSubheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/create_content_subheading"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/general"
                app:layout_constraintStart_toStartOf="@+id/general"
                app:layout_constraintTop_toBottomOf="@+id/general" />

            <EditText
                android:id="@+id/key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:autofillHints=""
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@color/light"
                android:ems="10"
                android:gravity="top|start"
                android:hint="This information will be the key for this card"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="12"
                android:minLines="6"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:scrollbars="vertical"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/cardNumber"
                app:layout_constraintStart_toStartOf="@+id/cardNumber"
                app:layout_constraintTop_toBottomOf="@+id/cardNumber"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:autofillHints=""
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@color/light"
                android:ems="10"
                android:gravity="top|start"
                android:hint="This is the value that corresponds the key"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="12"
                android:minLines="6"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:scrollbars="vertical"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/key"
                app:layout_constraintStart_toStartOf="@+id/key"
                app:layout_constraintTop_toBottomOf="@+id/key"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/value"
                app:layout_constraintStart_toStartOf="@+id/value"
                app:layout_constraintTop_toBottomOf="@+id/value"
                tools:text="please enter a name and topic"
                tools:visibility="visible" />

            <Button
                android:id="@+id/newBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:backgroundTint="@color/light"
                android:text="New"
                android:textColor="@color/medium"
                app:cornerRadius="30dp"
                app:layout_constraintEnd_toStartOf="@+id/doneBtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/error" />

            <Button
                android:id="@+id/doneBtn"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:backgroundTint="@color/light"
                android:text="Done"
                android:textColor="@color/medium"
                app:cornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/newBtn"
                app:layout_constraintTop_toBottomOf="@+id/error" />

            <TextView
                android:id="@+id/cardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@color/dark"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Card: 1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light"
                app:layout_constraintEnd_toEndOf="@+id/createSetSubheading"
                app:layout_constraintStart_toStartOf="@+id/createSetSubheading"
                app:layout_constraintTop_toBottomOf="@+id/createSetSubheading" />

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#00FFFFFF"
                android:minHeight="48dp"
                android:scaleX="2"
                android:scaleY="2"
                app:layout_constraintEnd_toStartOf="@+id/cardNumber"
                app:layout_constraintTop_toBottomOf="@+id/createSetSubheading"
                app:srcCompat="@drawable/ic_arrow_back"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/forwardBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00FFFFFF"
                android:minHeight="48dp"
                android:scaleX="2"
                android:scaleY="2"
                app:layout_constraintStart_toEndOf="@+id/cardNumber"
                app:layout_constraintTop_toBottomOf="@+id/createSetSubheading"
                app:srcCompat="@drawable/ic_arrow_forward"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>